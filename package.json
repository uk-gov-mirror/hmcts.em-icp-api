{
  "name": "em-icp-api",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production ./node_modules/.bin/ts-node -r tsconfig-paths/register server.ts",
    "start:dev": "nodemon --config nodemon.json",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "NODE_ENV=test yarn test:unit",
    "test:unit": "mocha --require ts-node/register 'test/unit/**/*.test.ts' --reporter spec --recursive --exit",
    "test:coverage": "cross-env NODE_ENV=test NODE_PATH=. nyc yarn test:unit",
    "test:a11y": "cross-env NODE_PATH=.",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner",
    "sonar-scan": "cross-env NODE_PATH=. sonar-scanner",
    "test:smoke": "NODE_ENV=test mocha -r ts-node/register 'test/smoke/healthcheck.test.ts' --timeout 25000 --reporter spec --exit",
    "test:functional": "cross-env NODE_PATH=. mocha --require ts-node/register 'test/functional/*.test.ts' --timeout 25000 --reporter spec --recursive --exit",
    "test:fullfunctional": "yarn test:functional",
    "cichecks": "yarn && yarn lint  && yarn test"
  },
  "dependencies": {
    "@hmcts/info-provider": "^1.0.0",
    "@hmcts/nodejs-healthcheck": "^1.7.0",
    "@hmcts/nodejs-logging": "^3.0.2",
    "@hmcts/properties-volume": "0.0.9",
    "@types/config": "^0.0.38",
    "@types/cookie-parser": "^1.4.2",
    "@types/csurf": "^1.11.0",
    "@types/es6-promisify": "^6.0.0",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/node": "^14.14.25",
    "@types/require-directory": "^2.1.1",
    "@types/uuid": "^8.3.0",
    "applicationinsights": "^1.4.0",
    "axios": "^0.21.1",
    "chai-http": "^4.3.0",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.11.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "ioredis": "^4.17.3",
    "ioredis-mock": "^4.21.1",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.4",
    "jwt-decode": "^3.1.2",
    "express-rate-limit": "^5.1.3",
    "require-directory": "^2.1.1",
    "socket.io": "3.1.1",
    "socket.io-client": "^3.1.1",
    "superagent": "^6.1.0",
    "swagger-ui-express": "^4.1.4",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.12.16",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.1",
    "@types/mocha": "^8.2.1",
    "@types/sinon": "^7.0.12",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.19.2",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "chai": "^4.3.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "debug": "^4.1.1",
    "eslint": "^6.8.0",
    "mocha": "^8.3.0",
    "nock": "^11.7.2",
    "nodemon": "^2.0.2",
    "nyc": "^15.1.0",
    "pa11y": "^5.3.0",
    "request": "^2.88.0",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.4.0",
    "sonar-scanner": "^3.1.0",
    "ts-loader": "^6.2.1",
    "tslint": "5.20.1"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "include": [
      "api/**/*.ts"
    ],
    "exclude": [
      "test/**/*.ts"
    ],
    "reporter": "lcov"
  }
}
